           <select id="mobile-animetrace-model" class="select select-bordered select-sm w-full">
             <option value="animetrace_high_beta" selected>High Quality (Beta)</option>
             <option value="pre_stable">Anime</option>
             <option value="anime_model_lovelive">LoveLive (Legacy)</option>
             <option value="full_game_model_kira">GalGame (Legacy)</option>
           </select>
           <button id="mobile-animetrace-btn" class="btn btn-sm btn-primary w-full">Search</button>
           <div id="mobile-animetrace-result" class="text-xs font-mono bg-base-200 p-2 rounded max-h-40 overflow-y-auto hidden whitespace-pre-wrap"></div>
        </div>
      </details>
    </li>
    <!-- Chaos Mode -->
    <li>
      <details>
        <summary class="font-bold flex justify-between items-center p-2 hover:bg-base-300 rounded-lg w-full">
           <div class="flex items-center gap-2">
             <Icon name="material-symbols:warning-outline" class="w-5 h-5" />
             Don't click on it!
           </div>
        </summary>
        <div id="mobile-chaos-container" class="p-2 bg-base-100 rounded-box">
           <button id="mobile-chaos-btn" class="btn btn-sm btn-error w-full font-bold text-white chaos-btn-animate">
             DO NOT PRESS
           </button>
        </div>
      </details>
    </li>
  </ul>
</details>

<script is:inline define:vars={{ SITE_THEME }}>
  document.addEventListener("astro:page-load", () => {
    // Prevent closing dropdowns when clicking inside containers
    const containers = ['mobile-animetrace-container', 'mobile-chaos-container'];
    containers.forEach(id => {
        const el = document.getElementById(id);
        if (el) {
            el.addEventListener('click', (e) => e.stopPropagation());
        }
    });

    // Theme Helper
    const isDarkTheme = (theme) => ['dark', 'synthwave', 'halloween', 'forest', 'black', 'luxury', 'dracula', 'business', 'night', 'coffee', 'dim', 'sunset'].includes(theme);

    // Base64 Logic (Mobile)
    const mb64Input = document.getElementById('mobile-b64-input');
    const mb64Output = document.getElementById('mobile-b64-output');
    const mb64Encode = document.getElementById('mobile-b64-encode-btn');
    const mb64Decode = document.getElementById('mobile-b64-decode-btn');
    const mb64Copy = document.getElementById('mobile-b64-copy-btn');

    // Helper functions (scoped to this listener, safe to redeclare)
    const utf8_to_b64 = (str) => {
        try {
            return window.btoa(new TextEncoder().encode(str).reduce((data, byte) => data + String.fromCharCode(byte), ''));
        } catch (e) {
            return "Error: Invalid Input";
        }
    };

    const b64_to_utf8 = (str) => {
        try {
            return new TextDecoder().decode(Uint8Array.from(window.atob(str), c => c.charCodeAt(0)));
        } catch (e) {
            return "Error: Invalid Base64";
        }
    };

    if (mb64Encode && mb64Decode && mb64Input && mb64Output) {
        mb64Encode.addEventListener('click', () => {
            mb64Output.value = utf8_to_b64(mb64Input.value);
        });

        mb64Decode.addEventListener('click', () => {
            mb64Output.value = b64_to_utf8(mb64Input.value);
        });
        
        if (mb64Copy) {
            mb64Copy.addEventListener('click', () => {
                if (mb64Output.value) {
                    navigator.clipboard.writeText(mb64Output.value);
                    // Visual feedback
                    mb64Copy.classList.add('text-success');
                    setTimeout(() => mb64Copy.classList.remove('text-success'), 1000);
                }
            });
        }
    }

    // Network Status Logic (Mobile)
    const checkMobileNetworkStatus = async () => {
        const pingEl = document.getElementById('mobile-network-ping');
        const ipEl = document.getElementById('mobile-network-ip');
        const countryEl = document.getElementById('mobile-network-country');
        const asnEl = document.getElementById('mobile-network-asn');
        const ispEl = document.getElementById('mobile-network-isp');
        const natEl = document.getElementById('mobile-network-nat');

        if (!pingEl || !ipEl) return;

        // Reset
        pingEl.textContent = '...';
        pingEl.className = 'text-xs font-bold font-mono';
        ipEl.textContent = '...';
        if (countryEl) countryEl.textContent = '...';
        if (asnEl) asnEl.textContent = '...';
        if (ispEl) ispEl.textContent = '...';
        if (natEl) natEl.textContent = '...';

        // Check Ping
        // Check Ping (Best of 3)
        try {
            let minDuration = Infinity;
            for (let i = 0; i < 3; i++) {
                const start = performance.now();
                await fetch(window.location.href, { method: 'HEAD', cache: 'no-store' });
                const duration = performance.now() - start;
                if (duration < minDuration) minDuration = duration;
            }
            minDuration = Math.round(minDuration);
            
            pingEl.textContent = `${minDuration} ms`;
            if (minDuration < 200) pingEl.classList.add('text-success');
            else if (minDuration < 500) pingEl.classList.add('text-warning');
            else pingEl.classList.add('text-error');
        } catch (e) {
            pingEl.textContent = 'Err';
            pingEl.classList.add('text-error');
        }

        // Check Info (IP, Loc, ASN, ISP)
        try {
            const res = await fetch('https://api.ip.sb/geoip', { referrerPolicy: 'no-referrer' });
            const data = await res.json();
            ipEl.textContent = data.ip;
            if (countryEl) countryEl.textContent = `${data.country_code}`;
            if (asnEl) asnEl.textContent = `AS${data.asn}`;
            if (ispEl) ispEl.textContent = data.isp.length > 15 ? data.isp.substring(0, 15) + '...' : data.isp;
        } catch (e) {
             // Fallback to Cloudflare Trace (IP only)
            try {
                const res = await fetch('https://www.cloudflare.com/cdn-cgi/trace');
                const text = await res.text();
                const ip = text.match(/ip=(.+)/)?.[1] || 'Unknown';
                ipEl.textContent = ip;
                if (countryEl) countryEl.textContent = text.match(/loc=(.+)/)?.[1] || '?';
                if (asnEl) asnEl.textContent = '-';
                if (ispEl) ispEl.textContent = '-';
            } catch (ex) {
                ipEl.textContent = 'Error';
            }
        }

        // Check NAT Type (WebRTC)
        if (natEl) {
            natEl.textContent = 'Detecting...';
            natEl.className = 'text-xs font-mono';
            
            const pc = new RTCPeerConnection({ iceServers: [{ urls: 'stun:stun.chat.bilibili.com:3478' }] });
            let candidatesCount = 0;
            const publicIpRef = ipEl.textContent; 

            pc.onicecandidate = (e) => {
                if (e.candidate) {
                    candidatesCount++;
                    const c = e.candidate;
                    
                    // Check NAT0 (Public IP) - if valid public IP matches local host candidate
                    if (c.type === 'host' && c.address === publicIpRef && publicIpRef !== 'Switching to fallback...' && publicIpRef !== 'Unknown') {
                         natEl.textContent = 'Public IP';
                         natEl.classList.add('text-success');
                         pc.close();
                         return;
                    }
                    
                    if (c.type === 'srflx') {
                         // Found a reflex candidate -> Behind NAT
                         natEl.textContent = 'Restricted';
                         natEl.classList.remove('text-success');
                    }
                } else {
                    if (candidatesCount === 0) {
                         natEl.textContent = 'Symmetric';
                         natEl.classList.add('text-error');
                    } else if (natEl.textContent === '检测中...') {
                         // Fallback if we got candidates (e.g. host) but no srflx and no match
                         natEl.textContent = 'Symmetric'; 
                    }
                    pc.close();
                }
            };
            
            try {
                pc.createDataChannel("");
                const offer = await pc.createOffer();
                await pc.setLocalDescription(offer);
            } catch (e) {
                natEl.textContent = 'Failed';
            }
        }
    };

    const mobileRefreshBtn = document.getElementById('mobile-refresh-network-status');
    if (mobileRefreshBtn) {
        mobileRefreshBtn.addEventListener('click', checkMobileNetworkStatus);
    }
    checkMobileNetworkStatus();

    // Color conversion helper (Hex to OKLCH)
    function hexToRgb(hex) {
       const bigint = parseInt(hex.slice(1), 16);
       const r = (bigint >> 16) & 255;
       const g = (bigint >> 8) & 255;
       const b = bigint & 255;
       return [r / 255, g / 255, b / 255];
    }

    function hexToRgb(hex) {
        const bigint = parseInt(hex.slice(1), 16);
        const r = (bigint >> 16) & 255;
        const g = (bigint >> 8) & 255;
        const b = bigint & 255;
        return [r, g, b];
    }

    function srgbTransfer(v) {
        v /= 255;
        return v <= 0.04045 ? v / 12.92 : Math.pow((v + 0.055) / 1.055, 2.4);
    }
    
    function rgbToOklch(r, g, b) {
        const lr = srgbTransfer(r);
        const lg = srgbTransfer(g);
        const lb = srgbTransfer(b);
        
        const l = 0.4122214708 * lr + 0.5363325363 * lg + 0.0514459929 * lb;
        const m = 0.2119034982 * lr + 0.6806995451 * lg + 0.1073969566 * lb;
        const s = 0.0883024619 * lr + 0.2817188376 * lg + 0.6302787005 * lb;
        
        const l_ = Math.cbrt(l);
        const m_ = Math.cbrt(m);
        const s_ = Math.cbrt(s);
        
        const L = 0.2104542553 * l_ + 0.7936177850 * m_ - 0.0040720468 * s_;
        const a = 1.9779984951 * l_ - 2.4285922050 * m_ + 0.4505937099 * s_;
        const b_ = 0.0259040371 * l_ + 0.7827717662 * m_ - 0.8086757660 * s_;
        
        const C = Math.sqrt(a * a + b_ * b_);
        let H = Math.atan2(b_, a) * 180 / Math.PI;
        if (H < 0) H += 360;
        
        return `${L.toFixed(3)} ${C.toFixed(3)} ${H.toFixed(3)}`;
    }

    function updateCustomTheme(type, hex) {
        const [r, g, b] = hexToRgb(hex);
        const oklch = rgbToOklch(r, g, b);

        if (type === 'primary') {
            document.documentElement.style.setProperty('--p', oklch);
            document.documentElement.style.setProperty('--s', oklch); 
            document.documentElement.style.setProperty('--a', oklch);
            localStorage.setItem('custom-primary-hex', hex);

            const pPicker = document.getElementById('custom-primary-picker');
            const mPicker = document.getElementById('mobile-custom-primary-picker');
            if (pPicker) pPicker.value = hex;
            if (mPicker) mPicker.value = hex;
        } else if (type === 'bg') {
            document.documentElement.style.setProperty('--b1', oklch);
            document.documentElement.style.setProperty('--b2', oklch);
            document.documentElement.style.setProperty('--b3', oklch);
            document.documentElement.style.setProperty('--n', oklch);
            document.documentElement.style.setProperty('--neu-base', oklch); 
            document.documentElement.style.setProperty('--neu-btn-bg', oklch);
            localStorage.setItem('custom-bg-hex', hex);

            const bPicker = document.getElementById('custom-bg-picker');
            const mPicker = document.getElementById('mobile-custom-bg-picker');
            if (bPicker) bPicker.value = hex;
            if (mPicker) mPicker.value = hex;
        } else if (type === 'text') {
            document.documentElement.style.setProperty('--bc', oklch);
            document.documentElement.style.setProperty('--nc', oklch);
            document.documentElement.style.setProperty('--neu-text', oklch);
            document.documentElement.style.setProperty('--neu-btn-text', oklch);
            localStorage.setItem('custom-text-hex', hex);

            const tPicker = document.getElementById('custom-text-picker');
            const mPicker = document.getElementById('mobile-custom-text-picker');
            if (tPicker) tPicker.value = hex;
            if (mPicker) mPicker.value = hex;
        }
    }
    
    // Initialize Custom Colors (Mobile)
    const storedCustomHex = localStorage.getItem('custom-primary-hex');
    if (storedCustomHex) updateCustomTheme('primary', storedCustomHex);

    const storedBgHex = localStorage.getItem('custom-bg-hex');
    if (storedBgHex) updateCustomTheme('bg', storedBgHex);

    const storedTextHex = localStorage.getItem('custom-text-hex');
    if (storedTextHex) updateCustomTheme('text', storedTextHex);

    // Listeners (Mobile)
    const mobilePrimaryPicker = document.getElementById('mobile-custom-primary-picker');
    if (mobilePrimaryPicker) {
        mobilePrimaryPicker.addEventListener('input', (e) => updateCustomTheme('primary', e.target.value));
        // Init value if exists
        if (storedCustomHex) mobilePrimaryPicker.value = storedCustomHex;
    }
    
    const mobileBgPicker = document.getElementById('mobile-custom-bg-picker');
    if (mobileBgPicker) {
        mobileBgPicker.addEventListener('input', (e) => updateCustomTheme('bg', e.target.value));
        if (storedBgHex) mobileBgPicker.value = storedBgHex;
    }

    const mobileTextPicker = document.getElementById('mobile-custom-text-picker');
    if (mobileTextPicker) {
        mobileTextPicker.addEventListener('input', (e) => updateCustomTheme('text', e.target.value));
        if (storedTextHex) mobileTextPicker.value = storedTextHex;
    }

    // Reset Logic (Mobile)
    const mobileResetButton = document.getElementById('mobile-reset-custom-theme');
    if (mobileResetButton) {
        mobileResetButton.addEventListener('click', () => {
             ['--p', '--s', '--a', '--b1', '--b2', '--b3', '--n', '--bc', '--nc', '--neu-base', '--neu-text', '--neu-btn-bg', '--neu-btn-text'].forEach(prop => {
                document.documentElement.style.removeProperty(prop);
            });
            localStorage.removeItem('custom-primary-hex');
            localStorage.removeItem('custom-bg-hex');
            localStorage.removeItem('custom-text-hex');
            
             if (mobilePrimaryPicker) mobilePrimaryPicker.value = '#000000';
             if (mobileBgPicker) mobileBgPicker.value = '#000000';
             if (mobileTextPicker) mobileTextPicker.value = '#000000';
             
             // Sync Desktop inputs as well (if needed, but usually independent view)
             const desktopP = document.getElementById('custom-primary-picker');
             if (desktopP) desktopP.value = '#000000';
             const desktopB = document.getElementById('custom-bg-picker');
             if (desktopB) desktopB.value = '#000000';
             const desktopT = document.getElementById('custom-text-picker');
             if (desktopT) desktopT.value = '#000000';
        });
    }

    // Dark/Light Toggle Logic
    const mobileThemeToggle = document.getElementById("mobile-theme-toggle");
    
    const updateMobileThemeIcons = (theme) => {
      const isDark = isDarkTheme(theme);
      
      // Update attribute
      document.documentElement.setAttribute('data-theme-type', isDark ? 'dark' : 'light');

      if (!mobileThemeToggle) return;
      const lightIcon = mobileThemeToggle.querySelector(".light-icon");
      const darkIcon = mobileThemeToggle.querySelector(".dark-icon");
      
      if (lightIcon && darkIcon) {
        if (isDark) {
          lightIcon.classList.add("hidden");
          darkIcon.classList.remove("hidden");
        } else {
          lightIcon.classList.remove("hidden");
          darkIcon.classList.add("hidden");
        }
      }
    };

    // Initialize icon state
    const currentTheme = document.documentElement.getAttribute("data-theme") || localStorage.getItem("theme");
    updateMobileThemeIcons(currentTheme);

    if (mobileThemeToggle) {
      mobileThemeToggle.addEventListener("click", () => {
        const currentTheme = document.documentElement.getAttribute("data-theme");
        const newTheme = currentTheme === SITE_THEME.light ? SITE_THEME.dark : SITE_THEME.light;
        
        document.documentElement.setAttribute("data-theme", newTheme);
        localStorage.setItem("theme", newTheme);
        
        updateMobileThemeIcons(newTheme);
        
        // Sync with other toggles if any
        const allToggles = document.querySelectorAll("[data-theme-toggle]");
        allToggles.forEach(() => {
           // Assuming other toggles have similar structure or logic, 
           // but since we are in mobile settings, we might be the only one active or visible.
           // If needed, dispatch a custom event or manually update them.
           // For now, just updating the DOM attribute is enough for styles, 
           // but icons on other toggles might need refresh if they are visible.
        });
      });
    }

    // Banner Mode Logic
    const bannerButtons = document.querySelectorAll("[data-set-banner-mobile]");
    
    const updateActiveBannerButton = () => {
      const currentMode = document.documentElement.getAttribute("data-banner-mode") || localStorage.getItem("banner-mode") || "normal";
      bannerButtons.forEach(btn => {
        if (btn.getAttribute("data-set-banner-mobile") === currentMode) {
          btn.classList.add("bg-primary/10", "text-primary", "font-bold", "active");
        } else {
          btn.classList.remove("bg-primary/10", "text-primary", "font-bold", "active");
        }
      });
    };

    updateActiveBannerButton();

    bannerButtons.forEach(btn => {
      btn.addEventListener("click", () => {
        const mode = btn.getAttribute("data-set-banner-mobile");
        document.documentElement.setAttribute("data-banner-mode", mode);
        localStorage.setItem("banner-mode", mode);
        updateActiveBannerButton();
      });
    });

    // Mobile Settings Click Outside
    const mDetails = document.getElementById('mobile-settings-details');
    if (mDetails) {
        document.addEventListener('click', (e) => {
            if (mDetails.hasAttribute('open') && !mDetails.contains(e.target)) {
                mDetails.removeAttribute('open');
            }
        });
    }

    // Theme Selector Logic
    const themeButtons = document.querySelectorAll('[data-set-theme-mobile]');

    const updateActiveThemeButton = () => {
      const currentTheme = document.documentElement.getAttribute("data-theme") || localStorage.getItem("theme");
      themeButtons.forEach(btn => {
        if (btn.getAttribute('data-set-theme-mobile') === currentTheme) {
            btn.classList.add("bg-primary/10", "text-primary", "font-bold", "active");
        } else {
            btn.classList.remove("bg-primary/10", "text-primary", "font-bold", "active");
        }
      });
    };
    
    updateActiveThemeButton();
    
    themeButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const theme = btn.getAttribute('data-set-theme-mobile');
        document.documentElement.setAttribute('data-theme', theme);
        localStorage.setItem('theme', theme);
        
        // Remove Custom Color
        document.documentElement.style.removeProperty('--p');
        document.documentElement.style.removeProperty('--s');
        document.documentElement.style.removeProperty('--a');
        localStorage.removeItem('custom-primary-hex');
        
        updateMobileThemeIcons(theme);
      });
    });

    // Observer for external changes
    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.type === 'attributes') {
          if (mutation.attributeName === 'data-theme') {
             updateActiveThemeButton();
             const currentTheme = document.documentElement.getAttribute("data-theme");
             updateMobileThemeIcons(currentTheme);
          }
          if (mutation.attributeName === 'data-banner-mode') {
             updateActiveBannerButton();
          }
        }
      });
    });

    // Anime Trace Logic (Mobile)
    const mTraceBtn = document.getElementById('mobile-animetrace-btn');
    const mTraceFile = document.getElementById('mobile-animetrace-file');
    const mTraceModel = document.getElementById('mobile-animetrace-model');
    const mTraceResult = document.getElementById('mobile-animetrace-result');

    if (mTraceBtn && mTraceFile) {
        mTraceBtn.addEventListener('click', async (e) => {
            e.preventDefault();
            e.stopPropagation();
            const file = mTraceFile.files[0];
            if (!file) {
                alert('Please select an image first');
                return;
            }

            mTraceBtn.disabled = true;
            mTraceBtn.textContent = 'Searching...';
            mTraceResult.classList.remove('hidden');
            mTraceResult.textContent = 'Processing...';

            try {
                const formData = new FormData();
                formData.append('file', file);
                formData.append('model', mTraceModel.value);
                formData.append('is_multi', '1');
                formData.append('ai_detect', '0');

                const response = await fetch('https://api.animetrace.com/v1/search', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();
                
                let output = '';
                
                // 1. AI Status
                if (typeof data.ai !== 'undefined') {
                     output += `AI Generated: ${data.ai ? 'Yes' : 'No'}\n\n`;
                }

                // 2. Data loop
                if (data.data && Array.isArray(data.data)) {
                    data.data.forEach((item) => {
                         // API uses 'character' as the key for the list of matches
                         if (item.character && Array.isArray(item.character)) {
                             item.character.forEach(c => {
                                 output += `Work: ${c.work || 'Unknown'}\n`;
                                 output += `Character: ${c.character || 'Unknown'}\n\n`;
                             });
                         }
                    });
                }

                if (!output.trim()) {
                     output = 'No recognized data found.';
                }
                
                mTraceResult.textContent = output;
                console.log('Mobile AnimeTrace Data:', data);

            } catch (e) {
                mTraceResult.textContent = 'Error: ' + e.message;
            } finally {
                mTraceBtn.disabled = false;
                mTraceBtn.textContent = 'Search';
            }
        });
    }

    // Chaos Mode Logic
    const mChaosBtn = document.getElementById('mobile-chaos-btn');
    let isMobileChaosRunning = false;
    
    if (mChaosBtn) {
        mChaosBtn.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            
            if (isMobileChaosRunning) {
                location.reload();
                return;
            }
            if (confirm("⚠️ FINAL WARNING ⚠️\nThis is a dangerous action.\nDo you really want to proceed?")) {
                startMobileChaos(mChaosBtn);
            }
        });
    }

    function startMobileChaos(btn) {
        isMobileChaosRunning = true;
        btn.textContent = "Stop";
        
        // Inject Chaos Styles
        if (!document.getElementById('mobile-chaos-style')) {
            const style = document.createElement('style');
            style.id = 'mobile-chaos-style';
            style.innerHTML = `
                :root {
                    --chaos-color: oklch(0.7 0.3 0);
                }
                /* Force Input/Search/Placeholder colors */
                input, textarea, select, ::placeholder, .input, .textarea {
                    color: var(--chaos-color) !important;
                    border-color: var(--chaos-color) !important;
                }
                ::placeholder {
                    color: var(--chaos-color) !important;
                    opacity: 0.7 !important;
                }
                /* Force Archives/Categories/Tags text */
                .text-gray-500, .text-gray-400, .text-base-content, .text-primary, .text-secondary, a {
                    color: var(--chaos-color) !important;
                }
                /* Force Borders */
                .border-secondary, .border-base-content, .border-primary {
                    border-color: var(--chaos-color) !important;
                }
                /* Force Icons (SVGs) */
                svg, [data-icon] {
                     color: var(--chaos-color) !important;
                }
                /* Force Sidebar Header Bars (Pseudo-elements) */
                .card-base .font-bold::before {
                    background-color: var(--chaos-color) !important;
                }
                /* Force Banner Title & Subtitle */
                .title, .subtitle {
                     color: var(--chaos-color) !important;
                }
            `;
            document.head.appendChild(style);
        }

        let hue = 0;

        
        setInterval(() => {
            hue = (hue + 5) % 360;
            const oklchVal = `0.7 0.3 ${hue}`;
            const colorFunc = `oklch(${oklchVal})`;
            
            document.documentElement.style.setProperty('--chaos-color', colorFunc);

            document.documentElement.style.setProperty('--p', oklchVal);
            document.documentElement.style.setProperty('--s', oklchVal);
            document.documentElement.style.setProperty('--bc', oklchVal);
            document.documentElement.style.setProperty('--nc', oklchVal);
            document.body.style.color = colorFunc;
        }, 100);


    }

    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ['data-theme', 'data-banner-mode']
    });
  });
</script>

