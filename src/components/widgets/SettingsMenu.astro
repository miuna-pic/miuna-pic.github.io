      </details>
    </li>

    <!-- Custom Theme -->
    <li>
      <details>
        <summary class="font-medium flex justify-between items-center p-2 hover:bg-base-200 rounded-lg w-full">
          <div class="flex items-center gap-2">
            <Icon name="material-symbols:format-paint" class="w-5 h-5" />
