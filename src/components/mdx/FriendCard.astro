---
export interface FriendCardProps {
  name: string;
  avatar: string;
  description: string;
  url: string;
  badge?: string;
}

const { name, avatar, description, url, badge } = Astro.props as FriendCardProps;

import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
---

<a 
  href={url} 
  target="_blank" 
  rel="noopener noreferrer"
  class="group relative block h-full bg-base-100 rounded-2xl p-4 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg border border-base-200 hover:border-primary/30"
>
  <!-- Badge (右上角) -->
  {badge && (
    <div class="absolute top-2 right-2 z-10">
      <span class="inline-flex items-center px-2 py-0.5 text-[10px] font-medium rounded bg-primary/10 text-primary border border-primary/20">
        {badge}
      </span>
    </div>
  )}

  <!-- External Link Icon (右下角) -->
  <div class="absolute bottom-2 right-2 z-10">
    <Icon name="lucide:external-link" class="w-3.5 h-3.5 text-base-content/30 group-hover:text-primary/50 transition-colors" />
  </div>

  <div class="flex items-center gap-4 h-full">
    <!-- 头像 -->
    <div class="relative shrink-0">
      <div class="w-16 h-16 rounded-full p-0.5 bg-base-100 ring-2 ring-base-200 group-hover:ring-primary/50 transition-all duration-500 group-hover:scale-105 shadow-sm">
        <div class="w-full h-full rounded-full overflow-hidden">
          {
            avatar ? (
              <Image src={avatar} width={64} height={64} format="webp" alt={name} loading="lazy" class="object-cover w-full h-full" />
            ) : (
              <div class="flex items-center justify-center w-full h-full bg-base-200 text-base-content/50">
                <span class="text-xl font-bold">{name.charAt(0)}</span>
              </div>
            )
          }
        </div>
      </div>
      <!-- 在线状态点缀 (装饰性) -->
      <div class="absolute bottom-0 right-0 w-3.5 h-3.5 bg-green-400 border-2 border-white dark:border-base-100 rounded-full shadow-sm group-hover:animate-pulse"></div>
    </div>

    <div class="flex-1 min-w-0 flex flex-col justify-center">
      <div class="flex items-center justify-between mb-1">
        <h3 class="font-bold text-base text-base-content group-hover:text-primary transition-colors duration-300 truncate pr-2">
          {name}
        </h3>
      </div>
      
      <p class="text-xs text-base-content/60 line-clamp-2 leading-relaxed mb-1.5">
        {description}
      </p>
      
      <div class="text-[10px] text-base-content/30 font-mono truncate group-hover:text-primary/60 transition-colors">
        {new URL(url).hostname}
      </div>
    </div>
  </div>
</a>
